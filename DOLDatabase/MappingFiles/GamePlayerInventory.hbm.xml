<?xml version="1.0" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
	<class name="DOL.Database.GamePlayerInventory, GameServer" table="`gameplayerinventory`">
		<id name="InventoryID" column="`InventoryID`">
			<generator class="foreign">
				<param name="property">Owner</param>
			</generator>
		</id>
		<one-to-one name="Owner" class="DOL.Database.GamePlayer, GameServer" constrained="true"/>
		<property name="IsCloakHoodUp" type="YesNo" not-null="true" column="`IsCloakHoodUp`"/>
		
		<map name="InventoryItems" cascade="all-delete-orphan">
			<key column="`InventoryID`"/>
			<index column="`SlotPosition`" type="Int32"/>
			<one-to-many class="DOL.Database.GenericItem, GameServer"/>
		</map>
	</class>
</hibernate-mapping>
